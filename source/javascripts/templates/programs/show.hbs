<h2>{{name}}</h2>
<dl>
  <dt>Year Started</dt>
  <dd>{{started}}</dd>
  <dt>Ended?</dt>
  <dd>{{ended}}</dd>
  <dt>Number of Seasons</dt>
  <dd>{{seasons}}</dd>
  <dt>Country</dt>
  <dd>{{country}}</dd>
  <dt>Watched</dt>
  <dd>{{watchedPercent}}%</dd>
</dl>

<table id="episodes-table">
  <thead>
    <tr>
      <td>Season</td>
      <td>Number</td>
      <td>Total Number</td>
      <td>Title</td>
      <td>Airdate</td>
      <td>Watched</td>
  </thead>
  <tbody>
    {{#each episodes}}
    <tr>
      <td>{{seasonNumber}}</td>
      <td>{{episodeNumber}}</td>
      <td>{{totalNumber}}</td>
      <td>{{#linkTo episodes.show this}}{{title}}{{/linkTo}}</td>
      <td>{{airdate}}</td>
      <td>{{view Ember.Checkbox checkedBinding="watched"}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>