<h2>{{name}}</h2>
<dl>
  <dt>Year Started</dt>
  <dd>{{started}}</dd>
  <dt>Ended?</dt>
  <dd>{{ended}}</dd>
  <dt>Number of Seasons</dt>
  <dd>{{seasons}}</dd>
  <dt>Country</dt>
  <dd>{{country}}</dd>
</dl>

<table id="episodes-table">
  <thead>
    <tr>
      <td>Season</td>
      <td>Number</td>
      <td>Total Number</td>
      <td>Title</td>
      <td>Airdate</td>
    </tr>
  </thead>
  <tbody>
    {{#each episodes}}
    <tr>
      <td>{{season_number}}</td>
      <td>{{episode_number}}</td>
      <td>{{total_number}}</td>
      <td>{{title}}</td>
      <td>{{airdate}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>